{
  "name": "pgroll",
  "version": "0.0.6",
  "description": "Postgres migration tool",
  "main": "dist/cjs/src/index.js",
  "module": "dist/esm/src/index.js",
  "types": "dist/cjs/src/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/tnht95/pgroll"
  },
  "files": [
    "dist/cjs/src",
    "dist/esm/src"
  ],
  "bin": {
    "pgroll": "./dist/cjs/src/cli.js"
  },
  "keywords": [
    "postgres",
    "sql",
    "postgresjs",
    "migration",
    "javascript",
    "typescript"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "tsx ./src/cli.ts",
    "build-cjs": "tsc -p tsconfig.cjs.json",
    "build-esm": "tsc -p tsconfig.esm.json",
    "build": "rm -rf dist && pnpm build-cjs && pnpm build-esm",
    "start": "node ./dist/index.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "test": "jest",
    "pp": "pnpm build && node update-version && npm publish --access=public"
  },
  "packageManager": "pnpm@10.28.1+sha512.7d7dbbca9e99447b7c3bf7a73286afaaf6be99251eb9498baefa7d406892f67b879adb3a1d7e687fc4ccc1a388c7175fbaae567a26ab44d1067b54fcb0d6a316",
  "engines": {
    "node": ">=v24.13.0"
  },
  "license": "ISC",
  "devDependencies": {
    "@eslint/compat": "^2.0.1",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.9",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.12.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^62.0.0",
    "jest": "^30.2.0",
    "prettier": "^3.8.0",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "postgres": "^3.4.8",
    "tslib": "^2.8.1"
  }
}
