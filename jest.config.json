{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "verbose": true,
  "collectCoverage": true,
  "collectCoverageFrom": ["src/**/*.ts", "!src/cli.ts"],
  "coverageThreshold": {
    "global": {
      "branches": 45,
      "functions": 45,
      "lines": 60,
      "statements": 60
    }
  },
  "testTimeout": 10000, // 10s
  "moduleNameMapper": {
    "@/(.*)": "<rootDir>/src/$1"
  },
  "coverageReporters": ["clover", "json", "lcov", "text"]
}
